<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textAlignment="textEnd"
        android:textSize="40sp"
        android:background="#FF5722"
        android:id="@+id/tv_input"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="118dp"/>
    <TextView
        android:textAlignment="textEnd"
        android:textSize="55sp"
        android:background="#00BCD4"
        android:id="@+id/tv_output"
        app:layout_constraintBottom_toTopOf="@id/buttons"
        android:layout_width="match_parent"
        android:layout_height="110dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/first_line"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_negative"
                android:text="+/-"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_zero"
                android:text="0"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_point"
                android:text="."
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_equals"
                android:text="="
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_line"
            app:layout_constraintBottom_toTopOf="@id/first_line"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_1"
                android:text="1"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_2"
                android:text="2"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_3"
                android:text="3"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_plus"
                android:text="+"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_line"
            app:layout_constraintBottom_toTopOf="@id/second_line"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_4"
                android:text="4"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_5"
                android:text="5"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_6"
                android:text="6"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_minus"
                android:text="-"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourth_line"
            app:layout_constraintBottom_toTopOf="@id/third_line"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_7"
                android:text="7"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_8"
                android:text="8"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_9"
                android:text="9"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_multiply"
                android:text="X"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifth_line"
            app:layout_constraintBottom_toTopOf="@id/fourth_line"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_clear"
                android:text="C"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_bracets"
                android:text="()"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_persentage"
                android:text="%"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/btn_division"
                android:text="/"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_width="90dp"
                android:layout_height="100dp" />

        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>